@model Model<IList<RBAC.Func>, int>


    <div class="card">
        <form action="?" method="get">
            <div class="card-header ch-alt">
                <h2>功能 列表 </h2>
                <ul class="actions">
                    <li>
                        <a href="javascript:void(0);" title="添加" onclick="loadFuncDetail(@(Model.Extra),0);">
                            <i class="zmdi zmdi-plus c-red"></i>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="card-body table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>
                                Id
                            </th>

                            <th>
                                名称
                            </th>
                            <th>
                                描述
                            </th>

                            <th>
                                排序
                            </th>
                            <th>状态</th>

                            <th>操 作</th>
                        </tr>
                    </thead>
                    @if (Model.Data != null)
                    {
                        <tbody>
                            @foreach (var o in Model.Data)
                            {
                                <tr>

                                    <td>
                                        @o.Id
                                    </td>

                                    <td>
                                        @o.Name
                                    </td>
                                    <td>
                                        @o.Summary
                                    </td>


                                    <td>
                                        @o.Priority
                                    </td>

                                    <td>@o.Status</td>

                                    <td></td>
                                </tr>
                            }
                        </tbody>

                    }

                </table>

            </div>
        </form>
    </div>



<script>
   
    $(function () {

    });

</script>
